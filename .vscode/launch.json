{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Firebase Emulators (Node 18 via NVM)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "bash",
      "runtimeArgs": ["-c", "source ~/.nvm/nvm.sh && nvm use 18 && firebase emulators:start"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    }
  ]
}
